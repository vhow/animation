<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/anchor"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true" />

    <View
        android:id="@+id/target"
        android:layout_width="@dimen/shape_size"
        android:layout_height="@dimen/shape_size"
        android:layout_centerVertical="true"
        android:layout_marginEnd="100dp"
        android:layout_toStartOf="@id/anchor"
        android:background="@drawable/square" />

    <View
        android:id="@+id/wall"
        android:layout_width="@dimen/surface_width"
        android:layout_height="@dimen/surface_height"
        android:layout_centerVertical="true"
        android:layout_marginStart="150dp"
        android:layout_toEndOf="@id/anchor"
        android:background="@drawable/surface" />
</RelativeLayout>